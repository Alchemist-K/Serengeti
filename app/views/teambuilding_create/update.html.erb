<div class="container" style="margin-top:50px">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 col-xs-12">
      <%= form_tag("/teambuilding_create/create", method: "POST") do %>
        <div class="form-group">
          <label for="team_name">팀 명</label>
          <input type="text" class="form-control" name="team_name" placeholder="팀 이름을 정해주세요!">
        </div>
        <div class="form-group">
          <label for="team_abstract">간단한 팀 소개</label>
          <input type="text" class="form-control" name="team_abstract"  placeholder="리스트 페이지에 올라갈 간단한 팀 소개를 적어주세요!">
        </div>
        <div class="form-group">
          <label for="team_content">자세한 팀 소개</label>
          <input type="text" class="form-control" name="team_content" placeholder="당신만의 팀 페이지에 들어갈 자세한 팀 소개를 적어주세요!">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">팀원 수</label>
          <input type="text" class="form-control" name="team_number" placeholder="당신만의 팀 페이지에 들어갈 자세한 팀 소개를 적어주세요!">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">팀 그림</label>
          <input type="text" class="form-control" name="team_picture" placeholder="당신만의 팀 페이지에 들어갈 자세한 팀 소개를 적어주세요!">
        </div>
        <button type="submit">팀 생성</button>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>