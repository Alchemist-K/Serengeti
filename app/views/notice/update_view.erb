<div class="container", style="margin-top:100px">


<!--공지사항 글쓰기 -->
  <%= form_tag("/notice/update/#{@notice.id}", method: "post") do %>
  
    <div class="row1">
      <div class="col-md-12">
        <div class="md-form">
          <%= text_field_tag(:title, @notice.title , placeholder: "제목") %>
        </div>
      </div>
    </div>
    <br>
    
    <div class="row2">
      <div class="col-md-12">
        <div class="md-form">
          <%= text_area_tag(:content, "#{@notice.content}", class: 'md-textarea', placeholder: "내용") %>
        </div>
      </div>
    </div>  
    
    <button type="submit" class="btn btn-primary btn-sm">수정하기</button>
  <% end %>
  
</div>