
<div class="container" style="margin-top:100px">
  <!--공지사항 보여주기-->
  <h2>공지사항</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-sm-1"></th>
        <th class="col-sm-7"><div style="text-align:center;">제목</div></th>
        <th class="col-sm-4"><div style="text-align:center;">날짜</div></th>
      </tr>
    </thead>
    <tbody>
      <% @notice.each do |p| %>
          <tr>
            <th class="col-sm-1"><div style="text-align:center;"><%= @i %></div></th>
            <td class="col-sm-7">
              <a href="/notice/read/<%=p.id%>"><div style="text-align:center;"><%= p.title %></div></a>
            </td>
            <td class="col-sm-4"><div style="text-align:center;"><%= p.created_at.in_time_zone("Asia/Seoul").strftime("%Y년 %m월 %d일") %></div></td>
          </tr>
          <% @i -= 1 %>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @notice, renderer: BootstrapPagination::Rails  %> 
  <% if user_signed_in? %>
    <% if current_user.admin? %> 
    <a href="/notice/write_input", class="btn btn-primary btn-sm">공지쓰기</a>
    <% end %>
  <% end %>  
  
</div>
